<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    tools:context="kr.pe.pp.customlivewallpaper.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/btnLowBatteryMode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shadow_button_normal"
            android:textColor="#003c71"
            android:drawableTop="@drawable/eco"
            android:paddingTop="30dp"
            android:gravity="center"
            android:text="@string/low_battery_mode_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#00ffffff"></View>

        <TextView
            android:id="@+id/btnPerformanceMode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shadow_button_normal"
            android:textColor="#71000b"
            android:drawableTop="@drawable/speedometer"
            android:paddingTop="30dp"
            android:gravity="center"
            android:text="@string/performance_mode_text" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
